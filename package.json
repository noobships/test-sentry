{
  "name": "testsentry",
  "version": "1.0.0",
  "private": false,
  "description": "The next-generation cross-device testing platform for web developers",
  "keywords": [
    "testing",
    "responsive-design",
    "cross-device",
    "web-development",
    "automation",
    "visual-regression",
    "developer-tools",
    "nextjs",
    "typescript",
    "tailwindcss"
  ],
  "homepage": "https://testsentry.devstool.dev",
  "bugs": {
    "url": "https://github.com/yourusername/testsentry/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/testsentry.git"
  },
  "license": "MIT",
  "author": {
    "name": "TestSentry Team",
    "email": "hello@testsentry.dev",
    "url": "https://testsentry.devstool.dev"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.15.0"
  },
  "scripts": {
    "analyze": "cross-env ANALYZE=true next build",
    "build": "pnpm format:check && pnpm lint:ci && pnpm type-check && next build",
    "dev": "next dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "next lint",
    "lint:ci": "next lint --max-warnings=0",
    "lint:fix": "next lint --fix",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-accordion": "1.2.2",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-aspect-ratio": "1.1.1",
    "@radix-ui/react-avatar": "1.1.2",
    "@radix-ui/react-checkbox": "latest",
    "@radix-ui/react-collapsible": "1.1.2",
    "@radix-ui/react-context-menu": "2.2.4",
    "@radix-ui/react-dialog": "1.1.4",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-hover-card": "1.1.4",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-menubar": "1.1.4",
    "@radix-ui/react-navigation-menu": "1.2.3",
    "@radix-ui/react-popover": "1.1.4",
    "@radix-ui/react-progress": "1.1.1",
    "@radix-ui/react-radio-group": "1.2.2",
    "@radix-ui/react-scroll-area": "1.2.2",
    "@radix-ui/react-select": "2.1.4",
    "@radix-ui/react-separator": "latest",
    "@radix-ui/react-slider": "1.2.2",
    "@radix-ui/react-slot": "latest",
    "@radix-ui/react-switch": "1.1.2",
    "@radix-ui/react-tabs": "1.1.2",
    "@radix-ui/react-toggle": "1.1.1",
    "@radix-ui/react-toggle-group": "1.1.1",
    "@radix-ui/react-tooltip": "1.1.6",
    "@vercel/analytics": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.0.4",
    "embla-carousel-react": "8.5.1",
    "input-otp": "1.4.1",
    "lucide-react": "^0.454.0",
    "next": "15.2.4",
    "next-themes": "latest",
    "react": "^19",
    "react-day-picker": "9.9.0",
    "react-dom": "^19",
    "react-hook-form": "^7.60.0",
    "react-resizable-panels": "^2.1.7",
    "recharts": "2.15.4",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "latest"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.9",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "only-allow": "^1.2.1",
    "postcss": "^8.5",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.9",
    "typescript": "^5"
  }
}
